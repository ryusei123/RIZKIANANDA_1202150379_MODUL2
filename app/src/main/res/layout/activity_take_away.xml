<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kyky.rizki_1202150379_modul2.TakeAway">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_Name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="37dp"
            android:text="Identitas Pemesan:"
            android:textSize="@dimen/text_size_head" />

        <EditText
            android:id="@+id/et_Name"
            android:layout_width="@dimen/width_editText"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_Address"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:hint="Name" />

        <EditText
            android:id="@+id/et_Phone"
            android:layout_width="@dimen/width_editText"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignLeft="@+id/et_Name"
            android:layout_alignStart="@+id/et_Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="41dp"
            android:hint="Phone"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_Address"
            android:layout_width="@dimen/width_editText"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_Note"
            android:layout_alignLeft="@+id/et_Note"
            android:layout_alignStart="@+id/et_Note"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="51dp"
            android:hint="Address" />

        <EditText
            android:id="@+id/et_Note"
            android:layout_width="@dimen/width_editText"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_Phone"
            android:layout_alignLeft="@+id/et_Phone"
            android:layout_alignStart="@+id/et_Phone"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:hint="Note" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:onClick="onClickOrder"
            android:padding="@dimen/padding_button"
            android:text="PILIH PESANAN"

            android:id="@+id/button" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>